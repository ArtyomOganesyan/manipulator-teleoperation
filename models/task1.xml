<mujoco model="ur5e scene">
	<include file="my_arm.xml"/>

	<statistic center="0.3 0 0.4" extent="0.8"/>

	<visual>
		<headlight diffuse="0.6 0.6 0.6" ambient="0.1 0.1 0.1" specular="0 0 0"/>
		<rgba haze="0.15 0.25 0.35 1"/>
		<global azimuth="120" elevation="-20"/>
	</visual>

	<asset>
		<texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
		<texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
		<material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
		<material name="yellow" rgba="1 1 0.6 1"/> <!-- Мягкий жёлтый -->
		<material name="green" rgba="0.6 1 0.6 1"/> <!-- Мягкий зелёный -->
		<material name="gray_table" rgba="0.6 0.6 0.6 1"/> <!-- Серый стол -->
	</asset>

	<worldbody>
	<!-- Пол -->
	<geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

	<!-- Стол -->
	<body name="table" pos="0.7 0 0.2">
		<!-- Столешница -->
		<geom type="box" pos="0.3 0 0.2" size="0.6 0.4 0.1" material="gray_table"/>

		<!-- Ножки стола -->
		<geom type="cylinder" pos="-0.2 -0.35 0" size="0.02 0.2" material="gray_table"/> <!-- Левая задняя ножка -->
		<geom type="cylinder" pos="0.8 -0.35 0" size="0.02 0.2" material="gray_table"/>  <!-- Правая задняя ножка -->
		<geom type="cylinder" pos="-0.2 0.35 0" size="0.02 0.2" material="gray_table"/>  <!-- Левая передняя ножка -->
		<geom type="cylinder" pos="0.8 0.35 0" size="0.02 0.2" material="gray_table"/>   <!-- Правая передняя ножка -->
	</body>
		 <!-- Объект 1 (жёлтый куб, подвижный) -->
	<body name="object1" pos="0.45 0.2 0.53">
		<joint type="free"/>
		<geom type="box" size="0.03 0.03 0.03" rgba=".9 0 0 1" friction="1 0.5 0.5" mass=".001"/>
	</body>


	<!-- Объект 2 (зелёный куб, подвижный) -->
	<body name="object2" pos="0.45 -0.2 0.53">
		<joint type="free"/>
		<geom type="box" size="0.03 0.03 0.03" material="green" friction="1 0.5 0.5" mass=".001"/>
	</body>

	<!-- Целевая область -->
	<body name="target_area" pos="0.65 0.0 0.52">
		<geom type="box" size="0.1 0.1 0.02" material="yellow"/>
	</body>



	</worldbody>
</mujoco>
